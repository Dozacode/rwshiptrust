datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = ["sqlite", "postgresql"]
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

///filestack file upload
model Image {
  id    Int    @id @default(autoincrement())
  title String
  url   String
}

// Document Models
model Fmea {
  id           Int      @id @default(autoincrement())
  Owner        String
  vesselname   String   @unique
  title        String
  date         DateTime
  author       String
  classed      Boolean
  classsociety String?
  reviewed     Boolean


}

model Dpat {
  id           Int     @id @default(autoincrement())
  Owner        String
  vesselname   String  @unique
  title        String
  date         String
  author       String
  findings     Boolean
  anyAFindings Boolean
  aFindings    String?
  anyBFindings Boolean
  bFindings    String?
  anyCFindings Boolean
  cFindings    String
  classed      Boolean
  classsociety String?
  reviewed     Boolean


}

model Particular {
  id             Int     @id @default(autoincrement())
  loa            String
  flag           String
  hull           String
  maxdraft       Int
  dpSystem       Boolean
  dpMake         String
  dieselelectric Boolean





}

model Dp {
  id           Int     @id @default(autoincrement())
  dpclass      String
  manufacturer String
  windnumber   Int
  wind1        String
  wind2        String?
  wind3        String?
  gyronumber   Int
  gyro1        String
  gyro2        String?
  gyro3        String?
  gyro4        String?
  vrunumber    Boolean
  vru1         String
  vru2         String?
  vru3         String?
  vru4         String?

}
